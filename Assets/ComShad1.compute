#pragma kernel CSMain
RWTexture2D<float4> Result;
Texture2D<float4> ImageInput;
 
float3 color;
 
[numthreads(8, 8, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    float r = ImageInput[float2(id.x, id.y)].r;
    float g = ImageInput[float2(id.x, id.y)].g;
    float b = 1.0f - 1.0f * (1.0f - ImageInput[float2(id.x, id.y)].b) * (1.0f - color.z);
 
    Result[id.xy] = float4(r, g, b, 1.0);
 
}